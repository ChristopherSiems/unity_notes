{
    "manifest_version": 3,
    "name": "Highlight Popup Example",
    "version": "1.0",
    "description": "Right-click highlighted text to show popup above selection.",
    "permissions": ["contextMenus", "scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
    }
  }