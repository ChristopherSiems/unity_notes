{
  "manifest_version": 3,
  "name": "Fact Highlighter",
  "version": "1.0",
  "description": "Automatically highlight facts on web pages using AI",
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}