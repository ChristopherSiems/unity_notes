{
  "manifest_version": 3,
  "name": "Gemma Inline Assistant",
  "version": "1.0",
  "description": "Right-click any text to get an inline Gemma model response.",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/gemma-3n-E4B-it-int4-Web.litertlm",
        "assets/wasm/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://cdn.jsdelivr.net"
  },
  "host_permissions": ["<all_urls>"]
}
